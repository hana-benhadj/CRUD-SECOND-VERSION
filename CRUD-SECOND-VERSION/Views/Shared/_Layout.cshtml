<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/fontawesome/font-awesome.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
    <link href="~/Content/fontawesome-all.css" rel="stylesheet" />
</head>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
@RenderSection("head", required: false)
@RenderSection("scripts", required: false)
<body>
   
    

    <script src="http://ajax.aspnetcdn.com/ajax/mvc/5.1/jquery.validate.unobtrusive.min.js" type="text/javascript"></script>
    <script type="text/javascript" src="http://code.jquery.com/ui/1.11.3/jquery-ui.min.js"></script>
    @*<span style="background-color:brown;"><i class="fas fa-user fa-3x"></i></span>*@
    <section class="mt-auto">
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark ">
            <a class="navbar-brand" href="#">Root Campany</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>





            <div style="width: 1700px" class="navbar navbar-default" role="navigation">

                @*<div class="collapse navbar-collapse" id="navbarSupportedContent">*@
                @*<ul class="navbar-nav mr-auto">
                    <li class="nav-item active">*@
                <ul class="collapse navbar-collapse nav navbar-nav top-menu">
                    <li class="dropdown">
                        <a class="nav-link" href="../Home/Index">Home <span class="sr-only">(current)</span></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="../Home/About">About</a>
                    </li>
                    <li>
                        <ul class="collapse navbar-collapse nav navbar-nav top-menu">

                            <li class="dropdown">
                                <a data-toggle="dropdown" href="../Home/Index" class="nav-link dropdown-toggle">
                                    Data Management <span class="caret"></span>
                                </a>

                                <ul class="dropdown-menu" role="menu">

                                    <li> <a class="dropdown-item" href="../Employees/Index">Employees</a></li>
                                    <li> <a class="dropdown-item" href="../Departments/Index">Departments </a></li>
                                </ul>
                        </ul>
                    </li>

                </ul>

                <div class="btn-group pull-right">
                    <i class="glyphicon glyphicon-user"></i><span class="hidden-sm hidden-xs"></span>
                    <span class="caret"></span>
                    <a href="../Account/Login">Logout</a>
                </div>
        </nav>
    </section>

    <div class="container body-content">
        @RenderBody()
        <hr />

    </div>

    @*<script src="~/Scripts/jquery-1.10.2.min.js"></script>*@
    <script src="~/Scripts/bootstrap.min.js"></script>

</body>
</html>